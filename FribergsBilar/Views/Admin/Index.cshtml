@model FribergsBilar.Models.Admin

@{
    ViewData["Title"] = "Index";
}

<h1>Admin</h1>

<h4>Logga in</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Användarnamn:</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Lösenord:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div> <br />
            <div class="form-group">
                <input type="submit" value="Logga in" class="btn btn-primary" />
            </div>
            @if (TempData["AdminFailureLoginMessage"] != null)
            {
                
                <div class="alert alert-danger">
                @TempData["AdminFailureLoginMessage"]
                </div>
            }
        </form>
    </div>
</div>


